<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="center"
    android:background="#002D45C9"
    tools:context=".OTPActivity">

    <ImageView
        android:src="@drawable/mobile"
        android:scaleType="centerCrop"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verify_919978280870"
        android:textAlignment="center"
        android:textColor="#2D45CA"
        android:textSize="25sp"
        android:textStyle="bold|normal"/>

    <TextView
        android:text="@string/enter_the_otp_code_to_verify_your_mobile_number"
        android:textAlignment="center"
        android:textSize="13sp"
        android:textColor="#424040"
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp"
            android:background="#FFFEFE"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:id="@+id/otp_view"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="#B6B6B6"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:outlineAmbientShadowColor="@color/white"
                android:text="@string/entre_otp1"
                tools:ignore="TextViewEdits" />

            <Button
                android:id="@+id/continueBtn"
                android:text="Continue"
                android:textStyle="bold|normal"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:backgroundTint="#2D5497"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>